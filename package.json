{
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^22.0.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.68.0",
    "flow-copy-source": "^1.3.0",
    "glow": "^1.2.2",
    "jest": "^22.0.3",
    "microbundle": "^0.4.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "jest": {
    "setupFiles": [
      "./jest/setup-enzyme"
    ],
    "modulePathIgnorePatterns": [
      "./node_modules"
    ]
  },
  "scripts": {
    "test": "jest && glow && npm run build",
    "build": "microbundle && npm run build:flow",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src dist && cp -rf dist/index.js.flow dist/index.umd.js.flow",
    "prepublish": "npm run build"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "source": "src/index.js",
  "name": "react-ctrl",
  "description": "A set of functions for authoring components that can be both stateful and stateless for certain props, using the controlled / uncontrolled pattern.",
  "dependencies": {
    "conartist": "^0.15.1",
    "nodent": "^3.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/treshugart/react-ctrl.git"
  },
  "author": "Trey Shugart <treshugart@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/treshugart/react-ctrl/issues"
  },
  "homepage": "https://github.com/treshugart/react-ctrl#readme",
  "keywords": [
    "react",
    "controlled",
    "uncontrolled",
    "stateful",
    "stateless",
    "props",
    "state"
  ],
  "version": "0.4.0"
}
